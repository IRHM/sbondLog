{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run and watch",
      "dependsOn": ["Watch SCSS", "Start hugo server"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "Start hugo server",
      "command": "hugo server",
      "type": "shell",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Watch SCSS",
      "command": "node-sass --include-path scss ./styles -wo static/css --sourceMap true --output-style compressed",
      "type": "shell",
      "problemMatcher": "$msCompile"
    }
  ]
}
